<%= render partial: 'layouts/application_render' %>

<h2>Pets Applied For</h2>
<% @application.pets.each do |pet| %>
  <div id="pet-<%= pet.id %>">
    <p>Name: <%= pet.name %></p>
    <p>Breed: <%= pet.breed %></p>
    <p>Age: <%= pet.age %></p>
    <p><%= pet.approval_status_for(@application) %></p>
    <% if pet.approval_status_for(@application) == "Pending" %>
      <%= button_to "Accept", "/applications/#{@application.id}/pets/#{pet.id}", method: :patch, params: { status: "Accepted" } %>
      <%= button_to "Reject", "/applications/#{@application.id}/pets/#{pet.id}", method: :patch, params: { status: "Rejected" } %>
    <% end %>
  </div>
<% end %>




