<%= render partial: 'layouts/application_render' %>

<h2>Pets Applied For</h2>
<% @application.pets.each do |pet| %>
  <div id="pet-<%= pet.id %>">
    <p>Name: <%= pet.name %></p>
    <p>Breed: <%= pet.breed %></p>
    <p>Age: <%= pet.age %></p>
    <p><%= @application.pet_status(pet) %></p>
    <% if @application.pet_status(pet) == "Pending" %>
      <%= button_to "Accept", "/admin/applications/#{@application.id}", method: :patch, params: { pet_id: pet.id, status: "Accepted"} %>
      <%= button_to "Reject", "/admin/applications/#{@application.id}", method: :patch, params: { pet_id: pet.id, status: "Rejected"} %>
    <% end %>
  </div>
<% end %>




